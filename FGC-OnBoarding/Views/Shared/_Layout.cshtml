    <div class="headerbgblock">

        <div class="headerblockleft">
            <div class="icon1"><img src="~/Images/icon.jpg" width="42" height="50"></div>
            <div class="icon2"><a asp-controller="Home" asp-action="Index"><img src="~/Images/fgcnewlogo.png" width="109" height="40"></a></div>
        </div><!--headerblockleft-->



        <div class="headerblockright">
            <div class="icon3"><img src="~/Images/headercut.jpg" width="27" height="50"></div>
            <div class="icon4">
                <div class="menyblock">

                    @{
                        var currentuser = UserManager.GetUserAsync(User).Result;

