    <style>
        .menyblock {
            margin: auto;
            float: right;
            margin-right: 20px;
            margin-top: 17px;
        }

            .menyblock a {
                margin: auto;
                float: left;
                color: #FFF;
                font-size: 12px;
                padding-left: 10px;
                padding-right: 10px;
                font-weight: bold;
                text-decoration: none;
                text-transform: uppercase;
            }

        .headerblockleft {
            margin: auto;
            float: left;
            width: 40%;
            height: auto;
        }

        .headerblockright {
            margin: auto;
            float: right;
            width: 59.5%;
            height: auto;
        }

        .headerbgblock {
            margin: auto;
            float: left;
            width: 100%;
            height: 50px;
            background: #FFF;
            position: fixed;
            top: 0;
            z-index: 999;
            -webkit-box-shadow: 0 8px 10px -6px #c5c2c2;
            -moz-box-shadow: 0 8px 10px -6px #c5c2c2;
            box-shadow: 0 8px 10px -6px #c5c2c2;
        }

        .icon4 {
            margin: auto;
            float: left;
            width: 96.5%;
            height: 50px;
            background: #1f8f46;
        }

        img {
            vertical-align: middle;
            border-style: none;
        }

        .icon1 {
            margin: auto;
            float: left;
            width: 60px;
        }

        .icon2 {
            margin: auto;
            float: left;
            margin-left: 100px;
            margin-top: 6px;
        }

        .icon3 {
            margin: auto;
            float: left;
            width: 27px;
            height: 50px;
        }

        .footerblockbg {
            margin: auto;
            float: left;
            width: 100%;
            height: auto;
            padding-bottom: 50px;
        }

        .footerblockbg1 {
            margin: auto;
            width: 75%;
            height: auto;
            border-top: #8cc046 solid 3px;
            font-size: 12px;
            font-weight: bold;
        }
    </style>

</head>
<body>
