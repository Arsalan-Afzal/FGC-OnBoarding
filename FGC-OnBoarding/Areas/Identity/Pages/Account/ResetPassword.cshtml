@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Reset Password</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
</head>

<body class="hold-transition" style="overflow: hidden;">

    @{
        await Html.RenderPartialAsync("TopNavbarIdentity");
    }
    <br /><br /><br /><br /><br />
    <div style="justify-content:center" class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <label asp-for="Input.Password"></label>
                <div class="input-group mb-3">

                    <input asp-for="Input.Password" type="password" class="form-control pass" placeholder="Password">

                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="show-btn"><i id="myeye" class="fas fa-eye"></i></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <label asp-for="Input.ConfirmPassword"></label>
                <div class="input-group mb-3">

                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control pass" placeholder="Password">

                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="show-btn"><i id="myeye1" class="fas fa-eye"></i></span>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                <button style="border-radius: 20px" type="submit" class="btn btn-success">Reset</button>
            </form>
        </div>
    </div>
    <br /><br /><br /><br /><br />
    @{
        await Html.RenderPartialAsync("FooterIdentityPages");
    }
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="../../Admin-Lte/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../../Admin-Lte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../../Admin-Lte/dist/js/adminlte.min.js"></script>

    <script>

        $('#myeye').click(function () {
            debugger
            var PasswordField = document.getElementById('Input_Password')

            if (PasswordField.type == "password") {

                PasswordField.type = "text";
            }
            else {
                PasswordField.type = "password";
            }
        })
        $('#myeye1').click(function () {
            debugger
            var PasswordField = document.getElementById('Input_ConfirmPassword')

            if (PasswordField.type == "password") {

                PasswordField.type = "text";
            }
            else {
                PasswordField.type = "password";
            }
        })



    </script>
    <link rel="stylesheet" href="../../Admin-Lte/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../Admin-Lte/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../Admin-Lte/dist/css/adminlte.min.css">
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</html>
